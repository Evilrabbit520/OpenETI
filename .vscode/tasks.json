                // "${workspaceFolder}/include/*.*",
                // "-o",
                // "${workspaceFolder}/build/CppLearn",
                // "-I",
                // "${workspaceFolder}/include",
                // "-std=c++2a"
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/build/${fileBasenameNoExtension}",
                "-std=c++2a"
                
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
